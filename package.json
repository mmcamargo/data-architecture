{
	"name": "data-architecture-api",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
		"build": "rimraf dist && tsc",
		"ts.check": "tsc --project tsconfig.json",
		"add-build": "git add dist",
		"migration:create": "typeorm migration:create src/app/shared/database/migrations/CreateTable",
		"migration:run": "typeorm-ts-node-commonjs migration:run -d src/main/configs/database.config.ts",
		"test": "jest -silent -noStackTrace -runInBand",
		"test:verbose": "jest -verbose -runInBand -detectOpenHandles",
		"test:coverage": "jest -runInBand -coverage",
		"test:watch": "jest -silent -noStackTrace -runInBand -watchAll",
		"test:unit": "jest -c jest.unit.config.ts -silent -noStackTrace -runInBand",
		"test:unit:verbose": "jest -c jest.unit.config.ts -verbose -runInBand -detectOpenHandles",
		"test:unit:coverage": "jest -c jest.unit.config.ts -silent -noStackTrace -runInBand -coverage",
		"test:unit:watch": "jest -c jest.unit.config.ts -silent -noStackTrace -runInBand -watchAll"
	},
	"license": "ISC",
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/node": "^18.14.2",
		"@types/pg": "^8.6.6",
		"@types/reflect-metadata": "^0.1.0",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.1",
		"jest": "^29.5.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.0.5",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"ioredis": "^5.3.1",
		"pg": "^8.9.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.12",
		"uuid": "^9.0.0"
	},
	"pre-commit": [
		"ts.check",
		"build",
		"add-build"
	]
}
